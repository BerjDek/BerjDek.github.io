@article{ren_agent-based_2014,
	title = {Agent-{Based} {Modeling} to {Inform} {Online} {Community} {Design}: {Impact} of {Topical} {Breadth}, {Message} {Volume}, and {Discussion} {Moderation} on {Member} {Commitment} and {Contribution}},
