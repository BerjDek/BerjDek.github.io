	year = {2023},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/pan3.10432},
	keywords = {behaviour, environmental monitoring, extinction of experience, human–nature interaction, nature connection, nature contact},
	pages = {591--606},
